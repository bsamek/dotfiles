[user]
	name = Brian Samek
[rerere]
	enabled = true
[branch]
	sort = -committerdate
[merge]
	conflictStyle = zdiff3
[pull]
	rebase = true
[init]
	defaultBranch = main
[rebase]
	updateRefs = true
[push]
	autoSetupRemote = true
[core]
	excludesfile = ~/.gitignore_global

# Default to personal identity/signing everywhere.
[include]
	path = ~/.gitconfig-personal

# Apply work-only repo maintenance settings in specific work repos.
[includeIf "gitdir:~/src/mms/"]
	path = ~/.gitconfig-work
[includeIf "gitdir:~/src/mongo/"]
	path = ~/.gitconfig-work
[includeIf "gitdir:~/src/evergreen/"]
	path = ~/.gitconfig-work
[includeIf "gitdir:~/src/ui/"]
	path = ~/.gitconfig-work
